{
  "manifest_version": 3,
  "name": "Personagem Extension",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://yoble.us/Main/communities/*/topic/*",
        "https://yoble.us./Main/communities/*/topic/*",
        "https://yoble.com.br/Main/communities/*/topic/*",
        "https://yoble.com.br./Main/communities/*/topic/*"
      ],
      "js": ["content.js"]
    }
  ]
}
